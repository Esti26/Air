<div class="login-body">
  <div class="container-login" id="login">
	<div class="form-container sign-in-container">
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <h2><strong>Log in</strong></h2>
			  <span>Enter your email here</span>
        <div class="hidden-label">
        <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: "Email" } %>
        <%= f.input :password,
                    required: false,
                  input_html: { autocomplete: "current-password", placeholder: "Password" } %>
        </div>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "loglog btn btn-success" %>
      <% end %>
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-right" id="register">
      <br>
				<h1>Don't you have an account yet?</h1>
				<p>Register now!</p>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %><br><br><br>
          <%= link_to "Register", new_registration_path(resource_name), class: "ghost" %><br />
        <% end %>
			</div>
		</div>
	</div>
 </div>
</div>
