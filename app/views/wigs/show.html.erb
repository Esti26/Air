<div class="d-flex justify-content-center add-wig">
  <h1 class = "d-flex justify-content-center">Wig details</h1>
</div>
<div class="container-fluid d-flex justify-content-center flex-wrap bigboy">
  <div class="custom-flex m-3 p-3">
    <br>
    <br>
    <div id="showcard" class="card mx-5 my-1 showcard fullcard" style="  border-radius: 10px;">
      <div class="card-header text-center titletext">
        <h3><%= @wig.title %></h3>
      </div>
      <div class="card-body d-flex justify-content-center p-5 m-3">
        <div style="width: 50%">
          <% if @wig.photo.key? %>
            <%= cl_image_tag @wig.photo.key, height: 300, width: 400, crop: :fill,  class:"wig-image" %>
          <% else %>
            <%= image_tag "default-photo.jpg", class:"wig-image" %>
          <% end %>
        </div>
        <div class="m-5 text-justify" style="width: 50%">
          <h6 class="card-title font-weight-light"><strong><% @wig.id %></strong></h6>
          <h4 class="card-title font-weight-light d-flex col-2 justify-content-between">
            <i class="fa-solid fa-paintbrush" style="color: #00060f;"></i>
            <button class="product-detail-color-selector__color-button" title = <%=@wig.color%> style="background-color: <%=@wig.color_code%>"></button>
          </h4>
          <hr class="solid">
          <h4 class="card-title"><i class="fa-solid fa-ruler-vertical" style="color: #000000;"></i> <%= @wig.length %>cm</h4>
          <hr class="solid">
          <h4 class="card-title font-weight-light"> <i class="fa-solid fa-tag" style="color: #000000;"></i> <%= @wig.price %>$</h4>
          <hr class="solid">
          <h4 class="card-title font-weight-light"> <i class="fa-regular fa-comment" style="color: #000000;"></i> <%= @wig.description %></h4>
        </div>
      </div>
      <div class="mb-5 buttonholder description">
        <%= link_to "Back to all wigs", wigs_path, class: "btn btn-primary first_button" %>
        <% if @wig.owner != current_user  && !@wig_rentals.pluck(:wig_id).include?(@wig.id) %>
          <%= link_to "Rent this wig", new_wig_wig_rental_path(@wig.id), class: "btn btn-success text-light", style: "margin-right: 580px;" %>
        <%end%>
        <% if @wig.owner == current_user%>
          <%= link_to "Edit this wig", edit_wig_path(@wig.id), class: "order-1 btn btn-success text-light" %>
          <%= link_to "", wig_path(@wig.id),  class: "order-3 btn btn-outline-danger fa-solid fa-trash-can pt-2 rentaldeletebutton", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        <%end%>
      </div>
      <br>
    </div>
  </div>
</div>
