
<style>
  .card{
    box-shadow:  1px 1px 15px grey;
  }
  .btn{
    transition: 0.5s;
  }
  .btn:active{
    border-radius: 50px;
    transition: 1s;
  }
</style>

<div class ="d-flex justify-content-center" style="margin-top: 100px;">
  <h1>Add a Wig</h1>
</div>
<div class="container-fluid d-flex justify-content-center align-items-center">
  <div class="card l-2 mt-4" style="width: 30rem;  border-radius: 10px;">
    <%= simple_form_for(@wig) do |f| %>
      <div class="card-body">
        <h5 class="card-title"><%= f.input :title %></h5>
        <h6 class="card-text"><%= f.input :color %></h6>
        <h6 class="card-text"><%= f.input :price %></h6>
        <h6 class="card-text"><%= f.input :description %></h6>
       <%= f.submit "Create", :class => "btn btn-success " %>
      </div>
    <% end %>
  </div>
</div>
