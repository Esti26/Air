<h1>Edit the wig</h1>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%= simple_form_for(@wig) do |f| %>
  <%= f.input :color %>
  <%= f.input :length %>
  <%= f.submit "Update" :class => "btn btn-success btn-mini" %>
<% end %>
