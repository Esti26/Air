
<style>
  .card{
    box-shadow:  1px 1px 15px grey;
  }
  .btn{
    transition: 0.5s;
  }
  .btn:active{
    border-radius: 50px;
    transition: 1s;
  }
</style>

<div class ="d-flex justify-content-center" style="margin-top: 100px;">
  <h1>Edit this rental</h1>
</div>
<div class="container-fluid d-flex justify-content-center align-items-center" data-rental-calculations-price-value="<%=@wig.price%>" data-controller="rental-calculations" style="width: 50%">
  <div class="card l-2 mt-4" style="width: 30rem;  border-radius: 10px;">
    <%= simple_form_for(@my_rental) do |f| %>
      <div class="card-body">
        <h5 class="card-title"></h5>
        <%= f.input :rental_start,
                      as: :string,
                      input_html: { data: { controller: "datepicker" , action:"change->rental-calculations#daysRented", "rental-calculations-target": "start"} } %>
                      <%= f.input :rental_end,
                      as: :string,
                      input_html: { data: { controller: "datepicker", action:"change->rental-calculations#daysRented", "rental-calculations-target": "end"} } %>
                      <p data-rental-calculations-target="days" > </p>
                      <p data-rental-calculations-target="price" > </p>
       <%= f.submit "Update this rental", :class => "btn btn-success " %>
      </div>
    <% end %>
  </div>
</div>
