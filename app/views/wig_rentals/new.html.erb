<div class="container mt-5 p-3 justify-content-center">
  <div class="custom-flex m-3 p-3">
    <h1>Wig details</h1>
    <br><br>
      <div class="card mx-5 my-1" style="width: 80%;  border-radius: 10px;">
        <div class="card-header text-center"></div>
            <div class="card-body d-flex justify-content-center p-5 m-3">
            <div class="card" style="width: 50%">
              <img src="https://images.unsplash.com/photo-1595888433198-fc3fba4d48e6?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1887&q=80" class="card-img-top rounded" alt="...">
            </div>
              <div class="m-5 text-justify" style="width: 50%">
                <h6 class="card-title font-weight-light"><strong><% @wig.id %></strong></h6>
                <h5 class="card-title font-weight-light"> color: <%= @wig.color %></h5>
                <h5 class="card-title"> length: <%= @wig.length %>cm</h5>
                  <%= simple_form_for([@wig, @wig_rental]) do |f| %>
                      <%= f.input :rental_start,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
                      <%= f.input :rental_end,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
                <%= f.submit "Rent This Wig", :class => "btn btn-success btn-mini" %>
              <% end %>
              </div>
          </div>
    <div class="mb-5 buttonholder description">
    <%= link_to "Back to all wigs", wigs_path, class: "btn btn-primary first_button" %>
      <% if @wig.owner == current_user%>
      <%= link_to "Edit this wig", edit_wig_path(@wig.id), class: "btn btn-dark" %>
      <%= link_to "Delete this wig", wig_path(@wig.id),  class: "btn btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    <%end%>
      </div>
      <br>
    </div>
  </div>
</div>
