<div class="container mt-5" style="margin-top: 5px">

  <div class ="container justify-content-center">

    <div class="container-fluid bg-light" style="height: 100%">
      <div class = "d-flex justify-content-between align-items-center">
        <h1>Wigs rental page</h1>
          </div class = "order-2">
            <h1>Wig details</h1>
            <br><br>
            <ul class="list-unstyled text-content-center">
              <h4>Wig <%=@wig.id%></h4>
              <h5>Color</h5> <li><%=@wig.color%></li>
              <br>
              <h5>Length</h5> <li><%=@wig.length%></li>
              <br>
              <h5>Owner ID</h5> <li><%=@wig.owner_id%></li>
              <br>
              <br>
              <%= simple_form_for([@wig, @wig_rental]) do |f| %>
                <%= f.input :rental_start,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
                <%= f.input :rental_end,
                      as: :string,
                      input_html: { data: { controller: "datepicker" } } %>
                <%= f.submit "Rent This Wig", :class => "btn btn-success btn-mini" %>
              <% end %>
            </ul>
          </div>
      </div>
    </div>
  </div>
</div>
